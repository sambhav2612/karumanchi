# EditorConfig helps developers define and maintain
# consistent coding styles between different editors and IDEs.

root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[package.json]
indent_style = space
indent_size = 2
